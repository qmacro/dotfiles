#!/bin/sh

case "$(basename "$1")" in
    Dockerfile) highlight -O ansi --syntax Dockerfile "$1";;
    *.jpeg|*.jpg|*.png) exiftool "$1";;
    *.csv|*.jq) bat --style=plain --color=always "$1";;
    *.md) glow -s dark "$1";;
    *.json) jq -C . "$1";;
    *) highlight -O ansi "$1" || bat --style=plain "$1";;
esac
